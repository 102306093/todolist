<h2>Todo list</h2>

<%= form_for Todo.new do |f|%>
<%= f.text_field :event%>
<%= f.submit%>
<%end%>

<table>
	<tr>
		<td><%= button_to "All", root_path, :method => :get %></td>
		<td><%= button_to "Pending", root_path, :method => :get %></td>
		<td><%= button_to "Completed", root_path, :method => :get %></td>
	</tr>
</table>

<% @todo.each do |todo| %>
	<table width=70%>
		<tr>
			<td><%= todo.event %></td>
			<td><%= button_to "Edit", edit_todo_path(todo), :method => :get %></td>
			<td><%= button_to "Delete", todo_path(todo), method:"delete" %></td>
		</tr>
	</table>
<%end%>

